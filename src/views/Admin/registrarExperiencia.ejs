

<% include partes/__cabecera %>
<% include partes/__navegacion %>
<div class="content-wrapper">
  <section class="content container-fluid">

    <div class="col-lg-8 col-lg-push-2">
      <div class="box box-danger">

        <div class="box-header with-border">
          <h3 class="box-title">Agregar Experiencia</h3>
        </div>
        <form class="form-horizontal" id="formulario"
        onsubmit="return false;">
        <div class="box-body">
          <div class="form-group">
            <label for="nombre" class="col-sm-2 control-label">Universidad</label>
            <div class="col-sm-10">
              <select name="id_universidad" class="form-control" id="id_universidad" placeholder="Archivo">
                <%if(typeof(data)!='undefined'&&data.length>0){%>
                <option value='<%=data[0].id_universidad%>' selected="selected"><%=data[0].universidad%> - <%=data[0].pais%></option>
                <%for(var i=1;i<data.length;i++){%>
                  <option value='<%=data[i].id_universidad%>'><%=data[i].universidad%> - <%=data[i].pais%></option>
                <%}%>
                <%}%>
                </select>
              </div>
            </div>
            <div class="form-group">
              <label for="nombre" class="col-sm-2 control-label">Video</label>
              <div class="col-sm-10">
                <input type="file" name="archivo" class="form-control" id="archivo" placeholder="Archivo" required="">
              </div>
            </div>
          </div>
          <div class="box-footer">
            <button type="submit" class="btn btn-danger center-block" id="enviar">Agregar</button>
          </div>
        </form>
        <div class="box-footer" id="porcentaje"></div>
      </div>
    </div>

  </section>
</div>
<script src="/js/experiencia.js"></script>
<% include partes/__footer %>
