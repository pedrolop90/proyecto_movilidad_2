

  <% include partes/__cabecera %>
  <% include partes/__navegacion %>
  <div class="content-wrapper">
    <section class="content container-fluid">
      <div class="row">
        <div class="col-xs-12">
          <div class="box box-danger">
            <div class="box-header">
              <h3 class="box-title">Lista de Paises</h3>
              <a href="/admin/registrarPais" class="btn btn-default"
              data-toggle="tooltip" data-placement="right" title="Agregar Pais">
              <span class="glyphicon glyphicon-plus"></span>
            </a>
          </div>
          <div class="box-body">
            <table id="tablaPais" class="table table-bordered table-hover">
              <thead>
                <tr>
                  <th>Codigo</th>
                  <th>Nombre</th>
                  <th>Editar</th>
                  <th>Eliminar</th>
                </tr>
              </thead>
              <tbody>
              <%if(data!=null){%>
                <%for(var i=0;i<data.length;i++){%>
                  <tr>
                  <td><%=data[i].codigo%></td>
                  <td><%=data[i].nombre%></td>
                  <td>
                  <button data-id="<%=data[i].id_pais%>"  data-accion="editar"
                  class="btn btn-info editar" onclick="desplegarModal(this)"
                  data-toggle="tooltip" data-placement="top" title="Editar Pais"/>
                     <span class="glyphicon glyphicon-wrench"></span>
                   </button>
                  </td>
                  <td> <a href="/Admin/eliminarPais?id=<%=data[i].id_pais%>"
                  type="button" class="btn btn-danger"
                  data-toggle="tooltip" data-placement="top" title="Eliminar Pais">
                  <span class="glyphicon glyphicon-trash"></span>
                  </a>
                  </td>
                  </tr>
                  <%}%>
                <%}%>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>

  <div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">

      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Editar Pais</h4>
        </div>

        <div class="modal-body">
          <form  id="formulario_editar_pais" action="/admin/editarPais" method="post">
            <div class="box-body">
              <input type="text" name="id_pais" id="id_pais" style="display:none;">
              <div class="form-group">
                <label for="nombre" class="col-sm-2 control-label">Codigo </label>
                <div class="col-sm-10">
                  <input type="text" name="codigo" class="form-control" id="codigo_modal" placeholder="Codigo Pais" required="">
                </div>
              </div>
                <div class="form-group">
                  <label for="nombre" class="col-sm-2 control-label">Pais </label>
                  <div class="col-sm-10">
                    <input type="text" name="nombre" class="form-control" id="nombre_modal" placeholder="Nombre Pais" required="">
                  </div>
                </div>
              </div>
             <div class="modal-footer">
                 <button id="actualizarPais" class="btn btn-primary center">Guardar</button>
               <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
             </div>
        </div>
        </form>
        </div>

      </div>

    </div>
    <script src="/js/pais.js"></script>
 <% include partes/__footer %>
